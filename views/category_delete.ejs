<%- include('./head') %>
<h1><%= title %>: <%= category.name %></h1>
<% if( items.length){%>
<p><strong>Delete the following items before attempting to delete this category.</strong></p>
<div style="margin-left:20px;margin-top:20px">
  <h4>Items in this genre</h4>
  <dl>
    <% items.forEach(item => { %>
    <dt>
      <a href=<%=item.url%>><%=item.name%> </a>
    </dt>
    <dd>
       <%=item.name%>
    </dd>

    <% }) %>
  </dl>
</div>
<%}else{%>
<p>Do you really want to delete this Category?</p>
<form method="POST">
  <div class="form-group">
    <input type="hidden" id="categoryid" name="categoryid" class="form-control" value=<%= category._id%>>
  </div>
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<%}%>



<%- include('./foot') %>